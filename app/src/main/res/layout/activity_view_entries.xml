<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adjectitious.android.petrolpatrol.AddEntry"
    android:orientation="vertical">

    <include
        android:layout="@layout/main_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"/>

    <ScrollView android:id="@+id/list_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout android:id="@id/list_subitem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingTop="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="11.5pt"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="3/18/2016" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:text="Arco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:text="$20.45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:text="11.245" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:text="245,212" />

            </LinearLayout>

            <LinearLayout android:id="@id/list_subitem"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingTop="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="11.5pt"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="3/18/2016" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:text="Arco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:text="$20.45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:text="11.245" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:text="245,212" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
